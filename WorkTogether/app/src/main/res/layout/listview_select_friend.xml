<?xml version="1.0" encoding="utf-8"?>
<jang.worktogether.group.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_checkbox"
            android:focusable="false"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/select_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/textColor"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:textSize="15dp"
        android:textColor="@color/textColor"
        android:id="@+id/select_name"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:padding="5dp"
        android:textColor="@color/textColor"
        android:textSize="10dp"
        android:id="@+id/select_status"
        android:layout_marginLeft="5dp"
        android:gravity="center"/>

</jang.worktogether.group.CheckableLinearLayout>