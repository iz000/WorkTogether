<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/enter_topic"
            android:text="Topic"
            android:textColor="@color/textColor"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_message"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/textColor"
            android:layout_marginTop="10dp"
            android:text="text message"
            android:textSize="10dp"

            android:layout_below="@+id/enter_topic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enter_member_count"
            android:text="Member number"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@+id/enter_topic"
            android:layout_toEndOf="@+id/enter_topic"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:textColor="@color/textColor"
        android:background="@drawable/round_button"
        android:id="@+id/enter_message_count"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:minHeight="60dp"
        android:visibility="gone"/>

</RelativeLayout>